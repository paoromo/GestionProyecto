<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-green-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/4 py-4 ...">Fecha Suceso</th>
          <th class="w-1/4 py-4 ...">Interno</th>
          <th class="w-28 py-4 ...">Descripcion</th>
          <th class="w-28 py-4 ...">Castigo</th>
          <th class="w-28 py-4 ...">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each comportamiento}}
        <tr>
          <td class="py-3 px-6">{{id}}</td>
          <td class="p-3 text-center">{{fecha_comp}}</td>
          <td class="p-3 text-center">{{id_interno}}</td>
          <td class="p-3 text-center">{{descripcion}}</td>
          <td class="p-3 text-center">{{condena}}</td>
          <td class="p-3 flex">
            <form action="/comportamiento/delete" method="POST" class="mx-2">
              <input type="hidden" value="{{id}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/comportamiento/edit/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>